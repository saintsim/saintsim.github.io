{
    "compilerOptions": {
        "moduleResolution": "node",  // Add this line
        "outDir": "./built",
        "allowJs": true,
        "module": "es2022",
        "target": "es2017",
        "lib": ["es2015", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"]
}